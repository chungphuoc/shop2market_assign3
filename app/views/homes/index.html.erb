<div class="row">
  <div class="col-sm-12 col-md-12 main">
    <h1 class="page-header"><i class="wi wi-thermometer"></i> Converter temperature</h1>
    <%= form_tag '', class: 'form-query', method: :get do %>
        <div class="col-md-12 form-group">
          <%= label_tag "label", 'Please enter the temperature' %>
          <%= text_field_tag 'temperature', params[:temperature], class: 'form-control temperature-input', placeholder: 'Eg: 50' %>
        </div>
        <div class="col-md-12 form-group">
          <%= label_tag "label", 'Choose a model' %>
          <%#= select_tag 'model_id', options_from_collection_for_select(@models, 'id', 'name', params[:model_id]), class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Convert', class: 'btn btn-primary', data: {disable_with: "Submitting, please wait..."} %>
        </div>
      <!-- </div> -->
    <% end %>
    <h2 class="sub-header">Results</h2>
    <div class="table-responsive">
      <% if @results.present? %>
        <pre><code><%= @results %></code><i class="wi wi-fahrenheit"></i></pre>
      <% else %>
        Something went wrong. Please try again!
      <% end %>
    </div>
  </div>
</div>